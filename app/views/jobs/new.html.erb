<!-- app/views/jobs/new.html.erb -->
<div class="main-container">
  <div class="content-container">
    <div class="job-form-container">
      <h2 class="job-form-header">Post a Job</h2>
      <%= form_for @job, html: { class: 'job-form' } do |f| %>
        <div class="form-field">
          <%= f.label :title, "Job Title", class: 'form-label' %>
          <%= f.text_field :title, class: 'job-input' %>
        </div>

        <div class="form-field">
          <%= f.label :description, "Job Description", class: 'form-label' %>
          <%= f.text_area :description, class: 'job-input job-text-area' %>
        </div>

        <div class="form-field">
          <%= f.label :salary, "Salary Offer", class: 'form-label' %>
          <%= f.text_field :salary, class: 'job-input job-salary' %>
        </div>

        <div class="job-form-footer">
          <div class="submit-button-container">
            <%= f.submit "Post", class: 'job-submit-button' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>